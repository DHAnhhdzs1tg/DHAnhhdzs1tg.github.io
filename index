<script>
/* Typing */
const texts=["Developer.","Gamer."];
let i=0,el=document.getElementById("dynamic");
function loop(){
  let t=texts[i],c=0; el.textContent="";
  let type=setInterval(()=>{
    el.textContent+=t[c++];
    if(c===t.length){clearInterval(type);setTimeout(erase,1200)}
  },80)
}
function erase(){
  let del=setInterval(()=>{
    el.textContent=el.textContent.slice(0,-1);
    if(!el.textContent){clearInterval(del);i=(i+1)%texts.length;loop()}
  },50)
}
loop();

/* Dark mode */
const toggle=document.getElementById("toggle");
toggle.onclick=()=>{
  document.body.classList.toggle("dark");
  toggle.textContent=document.body.classList.contains("dark")?"‚òÄÔ∏è":"üåô";
}

/* Electric click */
document.querySelectorAll("a,.toggle").forEach(btn=>{
  btn.addEventListener("click",e=>{
    const s=document.createElement("span");
    s.className="electric";
    s.style.left=e.offsetX+"px";
    s.style.top=e.offsetY+"px";
    btn.appendChild(s);
    setTimeout(()=>s.remove(),400);
  });
});

/* ===== SNOW SCRIPT (GI·ªÆ NGUY√äN) ===== */
var requestAnimationFrame=window.requestAnimationFrame||window.mozRequestAnimationFrame||window.webkitRequestAnimationFrame||window.msRequestAnimationFrame;
var transforms=["transform","msTransform","webkitTransform","mozTransform","oTransform"];
var transformProperty=getSupportedPropertyName(transforms);
var snowflakes=[];
var browserWidth;
var browserHeight;
var numberOfSnowflakes=50;
var resetPosition=false;

function setup(){
  window.addEventListener("DOMContentLoaded",generateSnowflakes,false);
  window.addEventListener("resize",()=>resetPosition=true,false)
}
setup();

function getSupportedPropertyName(props){
  for(var i=0;i<props.length;i++){
    if(typeof document.body.style[props[i]]!="undefined"){
      return props[i];
    }
  }
  return null;
}

function Snowflake(el,radius,speed,x,y){
  this.element=el;
  this.radius=radius;
  this.speed=speed;
  this.xPos=x;
  this.yPos=y;
  this.counter=0;
  this.sign=Math.random()<0.5?1:-1;
  this.element.style.opacity=0.5+Math.random();
  this.element.style.fontSize=4+Math.random()*30+"px";
}

Snowflake.prototype.update=function(){
  this.counter+=this.speed/5000;
  this.xPos+=this.sign*this.speed*Math.cos(this.counter)/40;
  this.yPos+=Math.sin(this.counter)/40+this.speed/30;
  setTranslate3DTransform(this.element,Math.round(this.xPos),Math.round(this.yPos));
  if(this.yPos>browserHeight){this.yPos=-50}
};

function setTranslate3DTransform(el,x,y){
  el.style[transformProperty]="translate3d("+x+"px,"+y+"px,0)";
}

function generateSnowflakes(){
  var flake=document.querySelector(".snowflake");
  var container=flake.parentNode;
  browserWidth=document.documentElement.clientWidth;
  browserHeight=document.documentElement.clientHeight;

  for(var i=0;i<numberOfSnowflakes;i++){
    var clone=flake.cloneNode(true);
    container.appendChild(clone);
    var x=Math.random()*browserWidth;
    var y=Math.random()*browserHeight;
    var speed=5+Math.random()*40;
    var radius=4+Math.random()*10;
    snowflakes.push(new Snowflake(clone,radius,speed,x,y));
  }
  container.removeChild(flake);
  moveSnowflakes();
}

function moveSnowflakes(){
  snowflakes.forEach(s=>s.update());
  if(resetPosition){
    browserWidth=document.documentElement.clientWidth;
    browserHeight=document.documentElement.clientHeight;
    snowflakes.forEach(s=>{
      s.xPos=Math.random()*browserWidth;
      s.yPos=Math.random()*browserHeight;
    });
    resetPosition=false;
  }
  requestAnimationFrame(moveSnowflakes);
}
</script>

